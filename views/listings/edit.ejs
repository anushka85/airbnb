<% layout("/layouts/boilerplate")-%>
<body>
    <br>
    <br>
    <div class="row">
        <div class="col-8 offset-2">
    <h3>Edit Your Listing</h3>
    <form method="POST" action="/listings/<%=listing._id%>?_method=PUT">
        <div class="mb-3">
        <lable for="title" class="form-label">Title</lable>
        <input name="listing[title]" value="<%=listing.title%>" class="form-control" required>
        </div>
        <div class="mb-3">
            <lable for="descrition" class="form-label">Description</lable>
        <input name="listing[description]" value="<%=listing.description%>" class="form-control" required>
        </div>
        <div class="mb-3">
            Original Image
            <img width=200px height=200px src="<%=originalimageurl%>">
        </div>
        <div class="mb-3">
            <lable for="image" class="form-label">URL of image</lable>
        <input name="listing[image]" type="file"value="<%=listing.image.url%>" class="form-control" >
        </div>
        <div class="row">
        <div class="mb-3 col-md-4">
        <lable for="price" class="form-label">Price</lable>
        <input name="listing[price]" value="<%=listing.price %>" class="form-control" required>
        </div>
        <div class="mb-3 col-md-8">
            <lable for="country" class="form-label">Country</lable>
            <input name="listing[country]" value="<%=listing.country%>" class="form-control" required>
        </div>
        </div>
        <div class="mb-3">
            <lable for="location" class="form-label">Location</lable>
         <input name="listing[location]" value="<%=listing.location%>" class="form-control" required>
         </div>
        
        
         <br><br>
         <button class="btn btn-dark edit-btn" mt-3>Update</button>
         <br>
         <br>
    </form>
</div>
</div>
